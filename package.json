{
	"name": "url-short",
	"version": "1.0.0",
	"description": "A tiny url shortener",
	"main": "src/index.ts",
	"author": "Andrew Munro",
	"license": "MIT",
	"scripts": {
		"start": "ts-node-dev src/index.ts",
		"build": "tsc",
		"docker-build": "docker build . -t synergies/url-short"
	},
	"dependencies": {
		"express": "^4.17.1",
		"reflect-metadata": "^0.1.13",
		"sequelize": "^6.6.2",
		"sequelize-typescript": "^2.1.0",
		"shortid": "^2.2.16",
		"sqlite3": "^5.0.2"
	},
	"devDependencies": {
		"@types/express": "^4.17.12",
		"@types/node": "^15.12.2",
		"@types/shortid": "^0.0.29",
		"@types/validator": "^13.1.4",
		"ts-node-dev": "^1.1.6",
		"typescript": "^4.3.2"
	},
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": true,
		"htmlWhitespaceSensitivity": "css",
		"insertPragma": false,
		"jsxBracketSameLine": false,
		"jsxSingleQuote": true,
		"printWidth": 140,
		"proseWrap": "preserve",
		"quoteProps": "as-needed",
		"requirePragma": false,
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true,
		"vueIndentScriptAndStyle": false
	}
}
